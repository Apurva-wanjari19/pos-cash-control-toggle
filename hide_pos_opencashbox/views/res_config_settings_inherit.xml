<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="res_config_settings_view_form_pos_inherit_custom" model="ir.ui.view">
        <field name="name">res.config.settings.view.form.inherit.pos.custom</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="point_of_sale.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//block[@id='pos_interface_section']" position="inside">
                <setting string="Hide Opening Cash Control" help="This will hide the Opening Cash Control screen in POS.">
                    <field name="hide_opening_cash_control"/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
